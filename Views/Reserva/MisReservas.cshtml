@model IEnumerable<DentalClinic.Models.Reserva>

@{
    ViewData["Title"] = "Mis Reservas";
}

<h2 class="mb-3">Reservas de @ViewBag.ClienteNombre</h2>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>Servicio</th>
            <th>Fecha</th>
            <th>Estado</th>
            <th>Precio</th>
            <th style="width:180px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="5" class="text-center">No tienes reservas registradas.</td>
            </tr>
        }
        else
        {
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Servicio?.Nombre</td>
                    <td>@r.FechaHora.ToString("dd/MM/yyyy hh:mm tt")</td>
                    <td>@r.Estado</td>
                    <td>@r.PrecioTotal.ToString("C")</td>
                    <td>
                        @if (r.Estado == "Pendiente")
                        {
                            <a asp-action="Edit" asp-route-id="@r.Id" class="btn btn-sm btn-warning">Editar</a>
                            <a asp-action="Cancelar" asp-route-id="@r.Id" class="btn btn-sm btn-danger ms-2">Cancelar</a>
                        }
                        else
                        {
                            <span class="text-muted">No disponible</span>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
