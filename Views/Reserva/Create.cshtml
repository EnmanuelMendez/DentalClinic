@model DentalClinic.Models.ViewModels.ReservaViewModel

@{
    ViewData["Title"] = "Nueva Reserva";
}

<h2 class="mb-3">Crear reserva para @Model.Cliente.Nombre</h2>

<form asp-action="Create" method="post" class="row g-3">

    @* Campo oculto para enviar el ID del cliente *@
    <input type="hidden" asp-for="Cliente.Id" />

    <div class="col-md-6">
        <label class="form-label">Servicio</label>
        <select asp-for="ServicioId" asp-items="Model.Servicios" class="form-select"></select>
        <span asp-validation-for="ServicioId" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label">Fecha y hora</label>
        <input asp-for="FechaHora" type="datetime-local" class="form-control" />
        <span asp-validation-for="FechaHora" class="text-danger"></span>
    </div>

    <div class="col-12 mt-3">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="MisReservas" asp-route-clienteId="@Model.Cliente.Id"
           class="btn btn-secondary ms-2">Volver</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
