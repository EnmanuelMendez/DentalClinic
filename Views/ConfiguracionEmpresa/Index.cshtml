@model IEnumerable<DentalClinic.Models.ConfiguracionEmpresa>

@{
    ViewData["Title"] = "Configuración Empresa";
}

<h2 class="mb-3">Configuración de la Empresa</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nueva Configuración
    </a>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>Nombre</th>
            <th>Dirección</th>
            <th>Teléfono</th>
            <th style="width: 200px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td>@item.Direccion</td>
                <td>@item.Telefono</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning ms-2">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ms-2">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
