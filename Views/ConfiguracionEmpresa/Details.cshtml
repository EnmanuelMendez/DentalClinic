@model DentalClinic.Models.ConfiguracionEmpresa

@{
    ViewData["Title"] = "Detalle Configuración";
}

<h2 class="mb-3">Detalle de Configuración</h2>

<dl class="row">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>

    <dt class="col-sm-2">Dirección</dt>
    <dd class="col-sm-10">@Model.Direccion</dd>

    <dt class="col-sm-2">Teléfono</dt>
    <dd class="col-sm-10">@Model.Telefono</dd>

    <dt class="col-sm-2">Horarios</dt>
    <dd class="col-sm-10">@Model.HorariosDescripcion</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary ms-2">Volver</a>
