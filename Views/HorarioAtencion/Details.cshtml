@model DentalClinic.Models.HorarioAtencion

@{
    ViewData["Title"] = "Detalle del Horario";
}

<h2 class="mb-3">Detalle del Horario</h2>

<dl class="row">
    <dt class="col-sm-2">Día</dt>
    <dd class="col-sm-10">@Model.DiaSemana</dd>

    <dt class="col-sm-2">Hora Inicio</dt>
    <dd class="col-sm-10">@Model.HoraInicio.ToString(@"hh\:mm")</dd>

    <dt class="col-sm-2">Hora Fin</dt>
    <dd class="col-sm-10">@Model.HoraFin.ToString(@"hh\:mm")</dd>

    <dt class="col-sm-2">Médico</dt>
    <dd class="col-sm-10">@Model.Medico</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary ms-2">Volver</a>
