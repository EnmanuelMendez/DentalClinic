@model DentalClinic.Models.Servicio

@{
    ViewData["Title"] = "Eliminar Servicio";
}

<h2 class="text-danger mb-3">Eliminar Servicio</h2>

<div class="alert alert-warning">
    ¿Estás seguro que deseas eliminar este servicio?
</div>

<dl class="row">
    <dt class="col-sm-2">Nombre</dt>
    <dd class="col-sm-10">@Model.Nombre</dd>

    <dt class="col-sm-2">Descripción</dt>
    <dd class="col-sm-10">@Model.Descripcion</dd>

    <dt class="col-sm-2">Costo</dt>
    <dd class="col-sm-10">@Model.CostoBase.ToString("C")</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>
