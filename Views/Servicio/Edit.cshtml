@model DentalClinic.Models.Servicio

@{
    ViewData["Title"] = "Editar Servicio";
}

<h2 class="mb-3">Editar Servicio</h2>

<form asp-action="Edit" method="post" class="row g-3">

    <input type="hidden" asp-for="Id" />

    <div class="col-12">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>

    <div class="col-12">
        <label asp-for="Descripcion" class="form-label"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
    </div>

    <div class="col-12">
        <label asp-for="CostoBase" class="form-label"></label>
        <input asp-for="CostoBase" class="form-control" />
    </div>

    <div class="col-12 mt-3">
        <button type="submit" class="btn btn-primary">Guardar cambios</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Volver</a>
    </div>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
