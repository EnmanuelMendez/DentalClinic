@model DentalClinic.Models.Servicio

@{
    ViewData["Title"] = "Nuevo Servicio";
}

<h2 class="mb-3">Nuevo Servicio</h2>

<form asp-action="Create" method="post" class="row g-3">

    <div class="col-12">
        <label asp-for="Nombre" class="form-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Descripcion" class="form-label"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
    </div>

    <div class="col-12">
        <label asp-for="CostoBase" class="form-label"></label>
        <input asp-for="CostoBase" class="form-control" />
        <span asp-validation-for="CostoBase" class="text-danger"></span>
    </div>

    <div class="col-12 mt-3">
        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Volver</a>
    </div>

</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
