@model IEnumerable<DentalClinic.Models.Servicio>

@{
    ViewData["Title"] = "Servicios";
}

<h2 class="mb-3">Servicios</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Nuevo servicio
    </a>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Costo Base</th>
            <th style="width:200px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="4" class="text-center">No hay servicios registrados.</td>
            </tr>
        }
        else
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nombre</td>
                    <td>@item.Descripcion</td>
                    <td>@item.CostoBase.ToString("C")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detalles</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning ms-2">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ms-2">Eliminar</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
